[flake8]

max-line-length = 120
ignore =
    # W503: line break before binary operator
    W503,
    # E203: whitespace before ':'
    E203

exclude =
    .git,
    docs,

per-file-ignores =
# E501: line too long
    ayugespidertools/common/Params.py:E501
    tests/test_common/test_common_Utils.py:E501
